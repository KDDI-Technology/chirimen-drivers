{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "esm",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
